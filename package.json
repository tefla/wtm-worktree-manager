{
  "name": "wtm-worktree-manager",
  "version": "0.1.0",
  "description": "WTM (WorkTree Manager) desktop UI for managing git worktrees",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "ELECTRON_DISABLE_SANDBOX=1 ELECTRON_DISABLE_GPU=1 electron . --disable-gpu --disable-software-rasterizer",
    "start": "ELECTRON_DISABLE_SANDBOX=1 ELECTRON_DISABLE_GPU=1 electron . --disable-gpu --disable-software-rasterizer",
    "test:unit": "node --test tests/unit/**/*.test.js",
    "test:e2e": "playwright test",
    "test": "npm run test:unit && npm run test:e2e"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.2",
    "electron": "^30.0.0"
  }
}
