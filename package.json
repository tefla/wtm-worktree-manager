{
  "name": "wtm-worktree-manager",
  "version": "0.1.0",
  "description": "WTM (WorkTree Manager) desktop UI for managing git worktrees",
  "main": "dist/main/main.js",
  "scripts": {
    "build:main": "tsc -p tsconfig.main.json",
    "typecheck:renderer": "tsc -p tsconfig.renderer.json --noEmit",
    "build:renderer": "node scripts/build-renderer.mjs",
    "copy-static": "node scripts/copy-static.mjs",
    "build": "npm run build:main && npm run typecheck:renderer && npm run build:renderer && npm run copy-static",
    "rebuild:native": "node scripts/ensure-node-pty.cjs --force",
    "dev": "node scripts/ensure-node-pty.cjs && npm run build && ELECTRON_DISABLE_SANDBOX=1 ELECTRON_DISABLE_GPU=1 electron . --disable-gpu --disable-software-rasterizer",
    "start": "npm run dev",
    "package": "npm run build && npx --yes electron-builder@25.1.8 --publish never",
    "test:unit": "npm run build:main && node --test tests/unit",
    "test:e2e": "playwright test",
    "test": "npm run test:unit && npm run test:e2e"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "node-pty": "^1.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.2",
    "@types/node": "^22.5.2",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "electron": "^30.0.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.5.4"
  },
  "build": {
    "appId": "com.wtm.worktreemanager",
    "productName": "WTM Worktree Manager",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    }
  }
}
